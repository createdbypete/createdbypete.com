---
layout: default
index: true
---
<section class="list">
<% blog.articles.each_with_index do |article, i| -%>
  <article class="category-articles <%= 'latest' if i.zero? %>">
    <header>
      <% if article.data.key?('external_link') -%>
        <h1 class="entry-title">
          <%= link_to article.title, article.data.external_link %>
        </h1>
        <small>Published on <%= URI.parse(article.data.external_link).host.downcase %></small>
      <% else -%>
        <h1 class="entry-title">
          <%= link_to article.title, article %>
        </h1>
      <% end -%>
    </header>
    <% if i.zero? %>
      <%= article.summary %>
    <% end %>
  </article>
<% end %>
</section>
